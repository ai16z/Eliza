{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
      "enabled": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "suspicious": {
          "noExplicitAny": "warn"
        },
        "style": {
          "useConst": "warn"
        }
      }
    },
    "formatter": {
      "enabled": true,
      "formatWithErrors": false,
      "indentStyle": "space",
      "indentWidth": 4,
      "lineWidth": 80,
      "lineEnding": "lf",
      "ignore": ["**/dist/**", "**/node_modules/**", "**/coverage/**"]
    },
    "javascript": {
      "formatter": {
        "quoteStyle": "double",
        "trailingComma": "es5",
        "semicolons": "always"
      }
    }
  }